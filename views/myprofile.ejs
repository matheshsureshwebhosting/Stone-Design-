    crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/assets/js/myprofile.js"></script>
<script>
     var userid = localStorage.getItem("userid")
  if (userid === null) {
    window.location.replace("/")
  }
</script>
</html>